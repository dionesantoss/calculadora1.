num1 = float(input("Número 1: "))
num2 = float(input("Número 2: "))
opcao = input("+:  -:  *:  /: ")

if opcao == "+": print(num1 + num2)

elif opcao == "-": print(num1 - num2)

elif opcao == "*": print(num1 * num2)

elif opcao == "/": print(num1 / num2 if num2 != 0 else "Erro")

else: print("Inválido")
